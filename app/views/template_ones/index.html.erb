

<h1>Template Ones</h1>

<table>
  <thead>
    <tr>
      <th>Pages</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @template_ones.each do |template_one| %>
      <tr>
        <td><%= template_one.about_title %></td>
        <td><%= link_to 'Show', template_one %></td>
        <% if current_user.try(:admin) == true %>
          <td><%= link_to 'Edit', edit_template_one_path(template_one) %></td>
          <td><%= link_to 'Destroy', template_one, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user.try(:admin) == true %>
  <%= link_to 'New Template One', new_template_one_path %>
<% end %>
