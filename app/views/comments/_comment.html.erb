<p><%= comment.user.username %> |
  <%= time_ago_in_words(comment.created_at) %> ago <br>
  <hr>
  <%= comment.body %></p>

<% if current_user == comment.user %>
<%= link_to 'Edit Comment', edit_post_comment_path(comment.post,comment), class: 'btn btn-warning btn-xs' %>
<%= link_to 'Delete', [comment.post, comment], method: :delete, data:{confirm:"This can't be undone!"}, class: 'btn btn-danger btn-xs'%>
<% end %>